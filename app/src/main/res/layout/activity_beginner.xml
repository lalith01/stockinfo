<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beginner"
    android:background="#FAF7F7">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#ffff"
        app:civ_border_color="#0F0D0D"
        app:title="Beginner"></androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/ll"
            android:padding="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:id="@+id/ni"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/n"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Need To Invest"
                        android:textColor="#0A0909"
                        android:textStyle="bold"
                        android:textSize="20dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:id="@+id/sr"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/sr"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Regulators"
                        android:textColor="#0A0909"
                        android:textStyle="bold"
                        android:textSize="20dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/lll"
            android:padding="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:id="@+id/fi"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/fi"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intermediaries"
                        android:textColor="#0A0909"
                        android:textStyle="bold"
                        android:textSize="20dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:id="@+id/ipo1"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/ipo1"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPO Markets - 1"
                        android:textColor="#0A0909"
                        android:textStyle="bold"
                        android:textSize="20dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="1"
            android:id="@+id/llll"
            android:layout_below="@+id/ll"
            android:padding="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/ipo2"
                android:layout_width="296dp"
                android:layout_height="155dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/ipo2"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPO Markets - 2"
                        android:textColor="#0A0909"
                        android:textStyle="bold"
                        android:textSize="20dp"></TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>